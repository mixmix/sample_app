    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>   <!--this is the bit which pulls the error messages in if any -->

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, yield(:confirm_message) %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit yield(:submit_message) , class: "btn btn-large btn-primary" %>
    <% end %>
